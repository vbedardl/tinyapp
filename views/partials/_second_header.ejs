<!-- Split button -->
  <style>
    #profileImage {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: #512DA8;
      font-size: 25px;
      color: #fff;
      text-align: center;
      line-height: 30px;
      margin: 20px 0;
    }
  </style>
  <nav class="navbar navbar-expand-md navbar-dark bg-success row justify-content-between">
    <div>
    <a class="navbar-brand" href="/urls">TinyApp</a>
