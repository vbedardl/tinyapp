      <% if(user) {%>
        <div>
        <div class="btn-group">
          <button id="profileImage" type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= user.email[0] %>
          </button>
          <ul class="dropdown-menu">
            <li><a href="#">Profile settings</a></li>
            <li><a href="#">Account settings</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Log out</a></li>
